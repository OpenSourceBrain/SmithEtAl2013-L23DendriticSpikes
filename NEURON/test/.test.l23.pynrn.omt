# Script for running automated tests on OSB using Travis-CI, see https://github.com/OpenSourceBrain/osb-model-validation

target: test_iclamp.py 
engine: PyNEURON
mep: .test.l23.mep
experiments:
  0.6:
    observables:
      spike times:
        file: 
          path: voltage.dat
          columns: [0,8]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
        tolerance: 0
  0.7:
    observables:
      spike times:
        file: 
          path: voltage.dat
          columns: [0,9]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
        tolerance: 0